<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/dimen_50dp"
    android:background="@color/transparent">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:textSize="22sp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Cairo , Egypt"
        />




    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/temp_c"
        android:textSize="72sp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/location"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="25"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/o"
        android:textSize="22sp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/temp_c"
        app:layout_constraintStart_toEndOf="@+id/temp_c"
        android:text="O"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/c"
        android:textSize="42sp"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/temp_c"
        app:layout_constraintStart_toEndOf="@+id/o"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="C"
        />




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/condition_icon"
        tools:src="@mipmap/ic_launcher"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/temp_c"
        app:layout_constraintStart_toStartOf="parent"
        />



    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/condition"
        android:textSize="32sp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/condition_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Sunny"
        />





</androidx.constraintlayout.widget.ConstraintLayout>